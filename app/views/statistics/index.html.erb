<h1>Listing statistics</h1>

<table>
  <tr>
    <th>Hits</th>
    <th>Published posts</th>
    <th>Post views</th>
    <th>Post shared</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @statistics.each do |statistic| %>
  <tr>
    <td><%= statistic.hits %></td>
    <td><%= statistic.published_posts %></td>
    <td><%= statistic.post_views %></td>
    <td><%= statistic.post_shared %></td>
    <td><%= link_to 'Show', statistic %></td>
    <td><%= link_to 'Edit', edit_statistic_path(statistic) %></td>
    <td><%= link_to 'Destroy', statistic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

