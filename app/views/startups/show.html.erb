<div class="widget-content">
  <p id="notice"><%= notice %></p>

  <div class="st_info">
    <div class="avatar">
      <%= image_tag @startup.logo.url(:small) %>
    </div> <!-- avatar -->
    <div class="info">
      <h2><%= @startup.fantasy_name %></h2>
      <br />
      <span class="button_follow">
      <% if @startup == current_user.startups%>
        <%= button_to 'Editar Perfil', edit_startup_path(current_user.startup), :method => "get", :class => "btn btn-small btn-info" %>
      <% elsif !current_user.friends.include?(@ustartup) %>
        <%= form_for :friend, :url => friendship_index_path do |f| %>
          <%= f.hidden_field :friend_id, value: @startup.id %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <button class="btn btn-small btn-primary">Seguir</button>
        <% end %>
      <% else %>
        <%= button_to 'Deixar de seguir', friendship_path, :method =>:delete, :friend_id => @startup.id, :class => 'btn btn-small btn-danger', :confirm => 'Voce tem certeza?' %>
      <% end %>
      </span>
    </div> <!-- info -->
  </div> <!-- user_info -->

  <span class="button_products">
    <%= button_to "PortfÃ³lio", products_path, :class => "btn btn-small btn-info"%>

  <div class="posts">
    <h3>Postagens</h3>
    <%= render "posts/posts" %>
  </div> <!-- posts -->
</div> <!-- widget-content>
