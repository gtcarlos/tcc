<div id="content">
	<div class="container">

		<div id="messages">
			<%= render 'layouts/messages' %>
		</div> <!-- messages -->

		<div class="row">

			<% if user_signed_in? %>
			<nav class="span3">
				<%= render 'layouts/sidebar' %>
			</nav> <!-- span3 -->
			<% end %>

			<session class="span9">
						<%= yield %>
			</session> <!-- span9 -->

		</div> <!-- row -->
	</div> <!-- container -->
</div> <!-- content -->
