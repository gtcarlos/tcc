<header>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
		<div class="container">
      <div class="brand"> <%= link_to(image_tag("header/logo.png", alt: "StartMe", id: "logo_header"), root_url) %></div>
      <div class="nav-collapse">
			<ul nav class="nav pull-right">
			<% if user_signed_in? %>
        <%= render "layouts/menu" %>
      <% else %>
        <div class="navbar-form" id="login">
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div class="login_form">
            <%= f.email_field :email, :id => "email", :autofocus => true, :placeholder => "E-mail" %>
            <%= f.password_field :password, :id => "password", :placeholder => "Senha"%>
            <%= f.submit "Entrar", :id => "login", :class => "btn" %>
          </div> <!-- navbar-form -->
        <% end %>
      </div>
        <% end %>
				</ul> <!-- nav pull-right -->
				</div> <!-- nav-collapse -->
      </div> <!-- container -->
    </div> <!-- navbar-inner -->
  </div> <!-- navbar -->
</header>
