<h3>Cartões de Crédito</h3>

<table class="table table-striped table-bordered" id="payments">
  <thead>
    <tr>
      <th>#</th>
      <th>Bandeira</th>
      <th>Numero Final</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @cards.each do |c| %>
    <tr>
      <td><%= c.id %></td>
      <td><%= c.flag %></td>
      <td><%= c.number.to_s[-4,4] %></td>
      <td>
        <%= link_to credit_card_path(:card_id => c.id), :method => :delete, :data => { :confirm => 'Tem certeza que deseja remover esse cartão?' } do %>
          <i class="icon-remove"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

