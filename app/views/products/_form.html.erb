    <%= f.label :photo, "Imagem do Produto" %>
    <%= f.file_field :photo %>
  </div>
  </div>
  <div class="field">
    <%= f.label "Descrição do Produto" %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label "Link Youtube:" %><br />
    <%= f.text_field :video %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
