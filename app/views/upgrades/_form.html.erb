<%= form_for(@upgrade) do |f| %>
  <% if @upgrade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@upgrade.errors.count, "error") %> prohibited this upgrade from being saved:</h2>

      <ul>
      <% @upgrade.errors.full_messages.each do |msg| %>
